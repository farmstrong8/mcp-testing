{
    "name": "@astro-forge/mcp-jest",
    "version": "0.2.7",
    "description": "MCP server for running Jest tests",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/farmstrong8/mcp-testing"
    },
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "bin": {
        "mcp-jest": "./dist/main.js"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "test": "vitest run --config src/testing/configs/unit.config.ts",
        "test:watch": "vitest --config src/testing/configs/unit.config.ts",
        "test:integration": "vitest run --config src/testing/configs/integration.config.ts",
        "test:e2e": "vitest run --config src/testing/configs/e2e.config.ts",
        "test:agent": "vitest run --config src/testing/configs/agent.config.ts"
    },
    "keywords": [
        "mcp",
        "jest",
        "testing",
        "ai"
    ],
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "1.17.5",
        "zod": "^3"
    },
    "devDependencies": {
        "@anthropic-ai/sdk": "^0.30.0",
        "@types/node": "^22.0.0",
        "typescript": "^5.7.0",
        "vitest": "^2.1.0"
    }
}
